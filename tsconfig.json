{
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react-jsx",
    "noEmit": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
	"strictFunctionTypes":true,
    "strictNullChecks": false,
    "types": ["vitest/globals", "@types/node-fetch"],
    "lib": [ "es2022" ]
  },

  "files": ["./src/index.mjs"],
  "exclude": ["./build", "./dist", "./node_modules"],
  "include": ["./src/*.ts", "src/tests/*.ts", "src/tests/*.mjs", "./tools/*.ts", "./tools/*.mjs", "./src/*.mjs"]
}
